@model IEnumerable<leave_management.Models.DetailsLeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>
<hr/>
<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-square" aria-hidden="true"></i> Create New</a>
</p>
<table class="table" id="tblData">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultNumberOfDays)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.DefaultNumberOfDays
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-pencil-alt" aria-hidden="true"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id"class="btn btn-success"><i class="fas fa-info-circle" aria-hidden="true"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger"><i class="fas fa-trash-alt" aria-hidden="true"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
