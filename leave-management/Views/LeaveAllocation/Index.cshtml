@model leave_management.Models.CreateLeaveAllocationViewModel

@{
    ViewData["Title"] = "Index";
}
<table id="tblData" class="table">
    <thead>
        <tr>
            
            <th>
               Leave Types
            </th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                <a asp-action="SetLeave" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="fas fa-user-check"></i> Allocate to Employees</a>

            </td>
        </tr>
}
    </tbody>
</table>
